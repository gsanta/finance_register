<div class="panel panel-default">
	<div class="panel-body">
		<div class="input-wrapper" {{bind-attr class="isNameError:input-wrapper-error"}}>
		{{input value=name class="form-control product-name input-item" placeholder="Name of product"}}
		</div>

		<div class="input-wrapper" {{bind-attr class="isPriceError:input-wrapper-error"}}>
		{{input value=price class="form-control product-price input-item" placeholder="Price"}}
		</div>

		<div class="input-wrapper" {{bind-attr class="isAmountError:input-wrapper-error"}}>
		{{input value=amount class="form-control product-amount input-item" placeholder="Amount"}}
		</div>
	</div>
</div> 