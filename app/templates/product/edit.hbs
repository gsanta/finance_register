<h1>Product</h1>

{{partial "partials/_product_form"}}

<div class="panel panel-default">
	<div class="panel-body">
		{{input value=date class="form-control product-amount input-item" disabled="disabled" }}
	</div>
</div>

<div class="panel panel-default">
	<div class="panel-body">
		<button {{action 'save'}} class="btn btn-default btn-block save input-item">Save</button>
		<button {{action "delete"}} class="btn btn-danger btn-block">Delete</button>
		<button {{action "cloneModel"}} class="btn btn-block">New product from this item</button>
	</div>
</div>  

{{#if showValidationErrors}}
<ul>
	{{#if errors.name}}
	<li>Field product name {{errors.name}}</li>
	{{/if}}
	{{#if errors.price}}
	<li>Field price {{errors.price}}</li>
	{{/if}}
	{{#if errors.amount}}
	<li>Field amount {{errors.amount}}</li>
	{{/if}}
</ul>
{{/if}}

{{outlet}}
