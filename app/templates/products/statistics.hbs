<div class="list-group">
	<div class="statistic-item row list-group-item active">
		<h2>{{t products.statistics.FullExpense}}</h2>
	</div>
	<div class="statistic-item row list-group-item">
		<div class="col-sm-4">{{fullExpense}}</div>
	</div>
</div>

<div class="list-group">
	<div class="statistic-item row list-group-item active">
		<h2>Monthly Expense</h2>
	</div>
	{{#each monthlyExpense}}
	<div class="statistic-item row list-group-item">
		<div class="col-sm-4">{{format-date "LLL" this.date}}</div>
		<div class="col-sm-4">{{expense}}</div>
	</div>
	{{else}}
		<div class="statistic-item row list-group-item">
			You have no products yet
		</div>
	{{/each}}
</div>

<div class="list-group">
	<div class="statistic-item row list-group-item active">
		<h2>Expense per Product</h2>
	</div>
	{{#each expensePerProduct}}
	<div class="statistic-item row list-group-item">
		<div class="col-sm-4">{{name}}</div>
		<div class="col-sm-4">{{expense}}</div>
		<div class="col-sm-4">{{amount}}</div>
	</div>
	{{else}}
		<div class="statistic-item row list-group-item">
			You have no products yet
		</div>
	{{/each}}
</div>


